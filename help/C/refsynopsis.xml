   [
    <!ENTITY appname          "Viking">
    <!ENTITY dhpackage        "viking">
   ]
>
  <!-- Shared between man page and main Help -->
  <refsynopsisdiv>
    <cmdsynopsis>
      <command>&dhpackage;</command>
      <group choice="opt">
        <arg choice="plain"><option>-d</option></arg>
        <arg choice="plain"><option>--debug</option></arg>
      </group>
      <group choice="opt">
        <arg choice="plain"><option>-V</option></arg>
        <arg choice="plain"><option>--verbose</option></arg>
      </group>
      <sbr/>
      <group choice="opt">
        <arg choice="plain"><option>--latitude</option> <replaceable>degrees</replaceable> <option>--longitude</option> <replaceable>degrees</replaceable></arg>
      </group>
      <sbr/>
      <group choice="opt">
        <arg choice="plain"><option>-z</option></arg>
        <arg choice="plain"><option>--zoom</option> <replaceable>ZoomLevelOSM</replaceable></arg>
      </group>
      <group choice="opt">
        <arg choice="plain"><option>-m</option></arg>
        <arg choice="plain"><option>--map</option> <replaceable>MapId</replaceable></arg>
      </group>
      <sbr/>
      <group choice="opt">
        <arg choice="plain"><option>-c</option></arg>
        <arg choice="plain"><option>--config-dir</option> <replaceable>directory</replaceable></arg>
      </group>
      <group choice="opt">
        <arg choice="plain"><option>-e</option></arg>
        <arg choice="plain"><option>--external</option></arg>
      </group>
      <group choice="opt">
        <arg choice="plain"><option>-r</option></arg>
        <arg choice="plain"><option>--running-instance</option></arg>
      </group>
      <sbr/>
      <group choice="plain">
        <arg rep="repeat"><replaceable>file</replaceable></arg>
        <arg rep="norepeat"><replaceable>-</replaceable></arg>
      </group>
    </cmdsynopsis>
    <cmdsynopsis>
      <command>&dhpackage;</command>
      <group choice="opt">
        <arg choice="plain"><option>-h</option></arg>
        <arg choice="plain"><option>--help</option></arg>
      </group>
    </cmdsynopsis>
    <cmdsynopsis>
      <command>&dhpackage;</command>
      <group choice="opt">
        <arg choice="plain"><option>-v</option></arg>
        <arg choice="plain"><option>--version</option></arg>
      </group>
    </cmdsynopsis>
  </refsynopsisdiv>
